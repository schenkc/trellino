<h1>Make a post</h1>

<form action="<%= posts_url %>" method="post">
  <%= auth_token %>

  <label for="post_body">Body:</label>
  <input
    id="post_body"
    name="post[body]"
    type="text">
  <br>

  <h3>Circles</h3>
  <ul>
    <% FriendCircle.all.each do |circle| %>
      <input
        id="circle_id"
        name="circle[id][]"
        type="checkbox"
        value="<%= circle.id %>">
      <label for="circle_id"><%= circle.name %></label>
      <br>
    <% end %>
  </ul>
  <br>

  <h3>Links</h3>
  <% 3.times do |idx| %>
    <ul>
        <label for="link_<%= idx %>">Link <%= idx %></label>
        <input id="link_<%= idx %>" type="text" name="link[<%= idx %>][url]">
        <br>
    </ul>
  <% end %>
  <br>

  <input type="submit" value="Post">
</form>